PORT=3000
SUPABASE_URL=your-supabase-url
SUPABASE_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-role-key
SESSION_SECRET=your-session-secret
NODE_ENV=development
# Optional database connection string. If set, overrides SUPABASE_* values
DATABASE_URL=postgres://user:password@localhost:5432/database

# Base URL of the deployed site
SITE_URL=https://wirebase.example.com

# File upload limit in bytes
MAX_UPLOAD_SIZE=5242880

# Preview image size limits for marketplace uploads
MARKET_PREVIEW_MAX_WIDTH=1000
MARKET_PREVIEW_MAX_HEIGHT=1000

# Default theme when a user has not selected one
DEFAULT_THEME=dark-dungeon

# Rate limiting configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Comma separated list of IPs allowed to bypass rate limits
TRUSTED_IPS=

# Enable additional logging when set
DEBUG=false

# Analytics and logging
PLAUDIBLE_DOMAIN=yourdomain.com
LOGFLARE_API_KEY=your-logflare-key
LOGFLARE_SOURCE_TOKEN=your-logflare-source

# Optional seed user credentials for development only
SEED_ADMIN_USERNAME=admin
SEED_ADMIN_EMAIL=admin@example.com
SEED_ADMIN_PASSWORD=changeMe

SEED_USER_USERNAME=user
SEED_USER_EMAIL=user@example.com
SEED_USER_PASSWORD=changeMe

