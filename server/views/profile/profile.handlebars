        display: flex;
        align-items: flex-start;
        padding: 20px;
        border-bottom: 2px solid var(--cyber-purple);
        background-color: var(--cyber-dark);
        flex-wrap: wrap;
        gap: 20px;
    }
    
    .profile-avatar-container {
        position: relative;
    }
    
    .profile-avatar {
        width: 100px;
        height: 100px;
        border: 3px solid var(--cyber-purple);
        border-radius: 8px;
        box-shadow: 0 0 20px var(--cyber-glow);
    }
    
    .profile-glyph {
        position: absolute;
        bottom: -10px;
        right: -10px;
        background-color: var(--cyber-dark);
        border: 2px solid var(--cyber-purple);
        border-radius: 50%;
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
    }
    
    .profile-info {
        flex: 1;
    }
    
    .profile-info h1 {
        margin-top: 0;
        margin-bottom: 15px;
        color: var(--cyber-silver);
        font-family: 'PixelOperator', 'VT323', monospace;
        text-shadow: 0 0 10px var(--cyber-glow);
        font-size: 2rem;
    }
    
    .profile-stats {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 10px;
    }
    
    .stat {
        display: flex;
        flex-direction: column;
    }
    
    .stat-label {
        font-size: 0.9rem;
        color: var(--cyber-gray);
    }
    
