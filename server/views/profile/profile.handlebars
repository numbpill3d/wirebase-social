<div class="profile-container">
    <div class="cyber-window profile-window">
        <div class="cyber-window-header">
            <span class="cyber-window-title">{{user.displayName}}'s Shell {{#if isOwner}}(Your Identity){{/if}}</span>
            <div class="cyber-window-controls">
                <span class="cyber-window-control">_</span>
                <span class="cyber-window-control">‚ñ°</span>
                <span class="cyber-window-control">√ó</span>
            </div>
        </div>
        <div class="cyber-window-content">
            <div class="profile-header">
                <div class="profile-avatar-container">
                    <img src="{{user.avatar}}" alt="{{user.displayName}}" class="profile-avatar">
                    <span class="profile-glyph">{{user.customGlyph}}</span>
                </div>
                <div class="profile-info">
                    <h1>{{user.displayName}}</h1>
                    <div class="profile-stats">
                        <div class="stat">
                            <span class="stat-label">Status</span>
                            <span class="stat-value">{{user.statusMessage}}</span>
                        </div>
                        <div class="stat">
                            <span class="stat-label">Member Since</span>
                            <span class="stat-value">{{memberSince user.createdAt}}</span>
                        </div>
                        <div class="stat">
                            <span class="stat-label">Bandwidth Credits</span>
                            <span class="stat-value loot">{{formatLoot user.lootTokens}}</span>
                        </div>
                    </div>
                </div>
                {{#if isOwner}}
                    <div class="profile-actions">
                        <a href="/profile/edit/html" class="cyber-button">Edit HTML</a>
                        <a href="/profile/edit/css" class="cyber-button">Edit CSS</a>
                        <a href="/profile/edit/theme" class="cyber-button">Theme</a>
                        <a href="/profile/terminal" class="cyber-button">Terminal Mode</a>
                    </div>
                {{/if}}
            </div>
            
            <div class="profile-main">
                <div class="profile-custom-content">
                    <!-- User's custom HTML content -->
                    <style>
                        {{{user.profileCss}}}
                    </style>
                    {{{allowedHTML user.profileHtml}}}
                </div>
                
                <div class="profile-sidebar">
                    <div class="profile-badges-container">
                        <div class="cyber-window">
                            <div class="cyber-window-header">
                                <span class="cyber-window-title">Validation Imprints</span>
                                <div class="cyber-window-controls">
                                    <span class="cyber-window-control">_</span>
                                </div>
                            </div>
                            <div class="cyber-window-content">
                                <div class="badges-list">
                                    {{#if user.badges.length}}
                                        {{#each user.badges}}
                                            <div class="badge" title="{{this.description}}">
                                                <span class="badge-icon">{{this.icon}}</span>
                                                <span class="badge-name">{{this.name}}</span>
                                            </div>
                                        {{/each}}
                                    {{else}}
                                        <div class="no-badges">No badges earned yet</div>
                                    {{/if}}
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="profile-streetpass">
                        <streetpass-widget username="{{user.username}}" profile-id="{{user._id}}" max-visitors="5" theme="dungeon"></streetpass-widget>
                    </div>
                    
                    <div class="profile-feed">
                        <div class="cyber-window">
                            <div class="cyber-window-header">
                                <span class="cyber-window-title">Data Stream</span>
                                <div class="cyber-window-controls">
                                    <span class="cyber-window-control">_</span>
                                </div>
                            </div>
                            <div class="cyber-window-content">
                                <div class="feed-info">
                                    <p>Subscribe to {{user.displayName}}'s updates:</p>
                                    <div class="feed-options">
                                        <a href="/feed/user/{{user.username}}?format=rss" class="feed-option" target="_blank">
                                            <span class="feed-icon">üì°</span>
                                            <span>RSS</span>
                                        </a>
                                        <a href="/feed/user/{{user.username}}?format=atom" class="feed-option" target="_blank">
                                            <span class="feed-icon">üì°</span>
                                            <span>ATOM</span>
                                        </a>
                                        <a href="/feed/user/{{user.username}}?format=json" class="feed-option" target="_blank">
                                            <span class="feed-icon">üì°</span>
                                            <span>JSON</span>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            {{#if userItems.length}}
            <div class="profile-scrapyard">
                <div class="cyber-window">
                    <div class="cyber-window-header">
                        <span class="cyber-window-title">Nullspace Contributions</span>
                        <div class="cyber-window-controls">
                            <span class="cyber-window-control">_</span>
                        </div>
                    </div>
                    <div class="cyber-window-content">
                        <div class="scrapyard-items">
                            {{#each userItems}}
                                <a href="/scrapyard/item/{{this._id}}" class="scrapyard-item">
                                    <div class="item-preview">
                                        <img src="{{this.previewImage}}" alt="{{this.title}}" class="item-image">
                                        <span class="item-category">{{categoryName}}</span>
                                    </div>
                                    <div class="item-details">
                                        <span class="item-title">{{this.title}}</span>
                                        <span class="item-stats">‚¨ÜÔ∏è {{this.votes.upvotes.length}} | ‚¨áÔ∏è {{this.votes.downvotes.length}}</span>
                                    </div>
                                </a>
                            {{/each}}
                        </div>
                        <div class="scrapyard-link">
                            <a href="/scrapyard" class="cyber-button">Access Nullspace</a>
                        </div>
                    </div>
                </div>
            </div>
            {{/if}}
        </div>
    </div>
</div>

<style>
