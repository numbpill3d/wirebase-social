    <section class="discovery-feed">
        <div class="win98-window">
            <div class="win98-window-header">
                <span class="win98-window-title">Discovery Feed</span>
                <div class="win98-window-controls">
                    <span class="win98-window-control" title="(Decorative)">_</span>
                    <span class="win98-window-control" title="(Decorative)">‚ñ°</span>
                    <span class="win98-window-control" title="(Decorative)">√ó</span>
                </div>
            </div>
            <div class="win98-window-content">
                {{#if recentUsers.length}}
                    <div class="recent-users">
                        <h3>Recent Users</h3>
                        <div class="users-grid">
                            {{#each recentUsers}}
                                <a href="/profile/{{username}}" class="user-card">
                                    <img src="{{avatar}}" alt="{{displayName}}" class="user-avatar">
                                    <div class="user-info">
                                        <span class="user-name">{{displayName}}</span>
                                        <span class="user-glyph">{{customGlyph}}</span>
                                        <p class="user-status">{{statusMessage}}</p>
                                    </div>
                                </a>
                            {{/each}}
                        </div>
                    </div>
                {{/if}}

                {{#if recentItems.length}}
                    <div class="recent-items">
                        <h3>Recent Submissions</h3>
                        <div class="items-grid">
                            {{#each recentItems}}
                                <a href="/scrapyard/item/{{_id}}" class="item-card">
                                    <div class="item-preview">
                                        <img src="{{previewImage}}" alt="{{title}}" class="item-image">
                                        <span class="item-category">{{categoryName}}</span>
                                    </div>
                                    <div class="item-info">
                                        <span class="item-title">{{title}}</span>
                                        <span class="item-creator">by {{creator.displayName}}</span>
                                    </div>
                                </a>
                            {{/each}}
                        </div>
                    </div>
                {{/if}}

                <a href="/discover" class="discover-link win98-button">View Full Discovery Feed</a>
            </div>
        </div>
    </section>

