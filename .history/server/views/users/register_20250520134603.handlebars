                                    <div class="glyph-options">
                                        <button type="button" class="glyph-option" data-glyph="üëÅÔ∏è">üëÅÔ∏è</button>
                                        <button type="button" class="glyph-option" data-glyph="üíæ">üíæ</button>
                                        <button type="button" class="glyph-option" data-glyph="üîå">üîå</button>
                                        <button type="button" class="glyph-option" data-glyph="üì°">üì°</button>
                                        <button type="button" class="glyph-option" data-glyph="üñ•Ô∏è">üñ•Ô∏è</button>
                                        <button type="button" class="glyph-option" data-glyph="üï∏Ô∏è">üï∏Ô∏è</button>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group half">
                                <label for="statusMessage">Node Status</label>
                                <input type="text" id="statusMessage" name="statusMessage" class="cyber-input" value="{{statusMessage}}" placeholder="Enter node status...">
                            </div>
                        </div>
                    </div>

                    <div class="terms-agreement">
                        <label class="checkbox-label">
                            <input type="checkbox" name="agreeTerms" class="cyber-checkbox" required>
                            I agree to the <a href="/terms" target="_blank">Terms of Service</a> and <a href="/privacy" target="_blank">Privacy Policy</a>
