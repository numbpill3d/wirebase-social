<div class="vivid-market">
  <header class="market-header">
    <div class="crt-banner">
      <h1>The Vivid Market</h1>
      <p class="subtitle">a relic exchange, resource vivarium</p>
    </div>
    
    <div class="market-stats">
      <div class="stat-box">
        <span class="stat-value">{{stats.itemCount}}</span>
        <span class="stat-label">Items</span>
      </div>
      <div class="stat-box">
        <span class="stat-value">{{stats.collectionCount}}</span>
        <span class="stat-label">Collections</span>
      </div>
      {{#if user}}
      <div class="stat-box wir-balance">
        <span class="stat-value">{{user.wirBalance}}</span>
        <span class="stat-label">WIR</span>
      </div>
      {{/if}}
    </div>
    
    <div class="market-actions">
      {{#if user}}
      <a href="/market/submit" class="action-button submit-button">+ Submit Item</a>
      <a href="/market/user/selling" class="action-button">My Items</a>
      <a href="/market/user/collections" class="action-button">My Collections</a>
      <a href="/market/user/wishlist" class="action-button">Wishlist</a>
      {{else}}
      <a href="/users/login" class="action-button">Login to Submit</a>
      {{/if}}
      <a href="/market/browse" class="action-button browse-button">Browse All</a>
    </div>
  </header>
  
  <section class="featured-section">
    <div class="section-header">
      <h2>Featured Items</h2>
      <div class="section-divider"></div>
    </div>
    
    <div class="featured-grid">
      {{#each featuredItems}}
      <div class="market-item featured-item">
        <div class="item-preview">
          <a href="/market/item/{{this.id}}">
            <img src="{{this.previewImage}}" alt="{{this.title}}">
          </a>
          <div class="item-category">{{this.categoryName}}</div>
        </div>
        <div class="item-details">
          <h3><a href="/market/item/{{this.id}}">{{this.title}}</a></h3>
          <div class="item-creator">
            <a href="/profile/{{this.creator.username}}">
              <img src="{{this.creator.avatar}}" alt="{{this.creator.username}}" class="creator-avatar">
              <span>{{this.creator.displayName}}</span>
            </a>
          </div>
          <div class="item-price">
            <span class="wir-price">{{this.wirPrice}} WIR</span>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </section>
  
  <section class="recent-section">
    <div class="section-header">
      <h2>Recent Additions</h2>
      <div class="section-divider"></div>
    </div>
    
    <div class="items-grid">
      {{#each recentItems}}
      <div class="market-item">
        <div class="item-preview">
          <a href="/market/item/{{this.id}}">
            <img src="{{this.previewImage}}" alt="{{this.title}}">
          </a>
          <div class="item-category">{{this.categoryName}}</div>
        </div>
        <div class="item-details">
          <h3><a href="/market/item/{{this.id}}">{{this.title}}</a></h3>
          <div class="item-creator">
            <a href="/profile/{{this.creator.username}}">
              <img src="{{this.creator.avatar}}" alt="{{this.creator.username}}" class="creator-avatar">
              <span>{{this.creator.displayName}}</span>
            </a>
          </div>
          <div class="item-price">
            <span class="wir-price">{{this.wirPrice}} WIR</span>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
    
    <div class="view-more">
      <a href="/market/browse" class="view-more-button">View More Items</a>
    </div>
  </section>
  
  <section class="collections-section">
    <div class="section-header">
      <h2>Popular Collections</h2>
      <div class="section-divider"></div>
    </div>
    
    <div class="collections-grid">
      {{#each popularCollections}}
      <div class="collection-card">
        <a href="/market/collections/{{this.id}}">
          <div class="collection-cover">
            <img src="{{this.coverImage}}" alt="{{this.name}}">
          </div>
          <div class="collection-details">
            <h3>{{this.name}}</h3>
            <div class="collection-creator">
              <img src="{{this.creator.avatar}}" alt="{{this.creator.username}}" class="creator-avatar">
              <span>{{this.creator.displayName}}</span>
            </div>
            <div class="collection-stats">
              <span>{{this.items.length}} items</span>
            </div>
          </div>
        </a>
      </div>
      {{/each}}
    </div>
    
    <div class="view-more">
      <a href="/market/collections" class="view-more-button">View All Collections</a>
    </div>
  </section>
  
  <section class="market-info">
    <div class="info-card">
      <h3>What is WIR?</h3>
      <p>WIR (Wirebase Internal Resource) is the virtual currency used in The Vivid Market. You can earn WIR by uploading assets, receiving likes, or converting loot tokens.</p>
      {{#if user}}
      <a href="/market/user/wir" class="info-button">Manage WIR</a>
      {{/if}}
    </div>
    
    <div class="info-card">
      <h3>How to Submit</h3>
      <p>Share your digital assets with the community. Upload templates, icons, code snippets, and more to earn WIR and build your collection.</p>
      <a href="/market/submit" class="info-button">Submit Item</a>
    </div>
    
    <div class="info-card">
      <h3>Create Collections</h3>
      <p>Organize your favorite items into themed collections. Share your curated sets with the community or keep them private.</p>
      {{#if user}}
      <a href="/market/user/collections" class="info-button">My Collections</a>
      {{else}}
      <a href="/users/login" class="info-button">Login to Create</a>
      {{/if}}
    </div>
  </section>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Add scanlines effect to the CRT banner
    const banner = document.querySelector('.crt-banner');
    if (banner) {
      const scanlines = document.createElement('div');
      scanlines.classList.add('scanlines');
      banner.appendChild(scanlines);
    }
    
    // Add hover effects to market items
    const marketItems = document.querySelectorAll('.market-item');
    marketItems.forEach(item => {
      item.addEventListener('mouseenter', function() {
        this.classList.add('item-hover');
      });
      item.addEventListener('mouseleave', function() {
        this.classList.remove('item-hover');
      });
    });
  });
</script>

