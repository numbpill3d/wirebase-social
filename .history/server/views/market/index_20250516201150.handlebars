<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Add scanlines effect to the CRT banner
    const banner = document.querySelector('.crt-banner');
    if (banner) {
      const scanlines = document.createElement('div');
      scanlines.classList.add('scanlines');
      banner.appendChild(scanlines);
    }

    // Add hover effects to market items
    const marketItems = document.querySelectorAll('.market-item');
    marketItems.forEach(item => {
      item.addEventListener('mouseenter', function() {
        this.classList.add('item-hover');
      });
      item.addEventListener('mouseleave', function() {
        this.classList.remove('item-hover');
      });
    });

    // Theme selector functionality
    const themeSelector = document.getElementById('market-theme');
    const marketContainer = document.querySelector('.vivid-market');

    // Check for saved theme in localStorage
    const savedTheme = localStorage.getItem('vivid-market-theme');
    if (savedTheme) {
      // Remove any existing theme classes
      marketContainer.classList.remove(
        'theme-purple',
        'theme-blue',
        'theme-red',
        'theme-green',
        'theme-grayscale'
      );

      // Add the saved theme class
      marketContainer.classList.add(savedTheme);

      // Update the selector
      themeSelector.value = savedTheme;
    }

    // Handle theme changes
    themeSelector.addEventListener('change', function() {
      const selectedTheme = this.value;

      // Remove any existing theme classes
      marketContainer.classList.remove(
        'theme-purple',
        'theme-blue',
        'theme-red',
        'theme-green',
        'theme-grayscale'
      );

      // Add the selected theme class
      marketContainer.classList.add(selectedTheme);

      // Save to localStorage
      localStorage.setItem('vivid-market-theme', selectedTheme);

      // Add a visual feedback for theme change
      const notification = document.createElement('div');
      notification.className = 'notification success';
      notification.textContent = 'Theme updated!';
      document.body.appendChild(notification);

      // Show notification
      setTimeout(() => {
        notification.classList.add('show');
      }, 100);

      // Hide notification after 2 seconds
      setTimeout(() => {
        notification.classList.remove('show');
        setTimeout(() => {
          notification.remove();
        }, 300);
      }, 2000);
    });

    // Add animation to stats
    const statValues = document.querySelectorAll('.stat-value');
    statValues.forEach(stat => {
      const finalValue = parseInt(stat.textContent);
      let currentValue = 0;
      const duration = 1500; // 1.5 seconds
      const interval = 20; // Update every 20ms
      const steps = duration / interval;
      const increment = finalValue / steps;

      // Start at 0
      stat.textContent = '0';

      // Animate to final value
      const counter = setInterval(() => {
        currentValue += increment;
        if (currentValue >= finalValue) {
          clearInterval(counter);
          stat.textContent = finalValue;
        } else {
          stat.textContent = Math.floor(currentValue);
        }
      }, interval);
    });
  });
</script>

