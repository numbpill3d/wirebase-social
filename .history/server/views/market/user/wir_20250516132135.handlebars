    background-color: var(--bg-medium);
    border: 1px solid var(--border-color);
    padding: 20px;
  }

  .user-profile-card {
    display: flex;
    align-items: center;
    margin-bottom: 20px;
    padding-bottom: 20px;
    border-bottom: 1px solid var(--border-color);
  }

